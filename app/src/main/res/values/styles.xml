    <!-- Tab Layout Style -->
    <style name="Widget.MyChatApp.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabBackground">@color/whatsapp_primary</item>
        <item name="tabTextColor">@color/whatsapp_tab_text</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.MyChatApp.Tab</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.MyChatApp.Tab" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.MyChatApp.ChatMessage" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/whatsapp_chat_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MyChatApp.ChatTime" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/whatsapp_chat_time</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.MyChatApp.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">@color/whatsapp_primary</item>
        <item name="colorSurface">@color/whatsapp_dialog_background</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <!-- Bottom Sheet Theme -->
    <style name="Theme.MyChatApp.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/whatsapp_bottom_sheet_background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomOutlinedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="boxCornerRadiusTopStart">45dp</item>
        <item name="boxCornerRadiusTopEnd">45dp</item>
        <item name="boxCornerRadiusBottomStart">45dp</item>
        <item name="boxCornerRadiusBottomEnd">45dp</item>
    </style>
</resources>