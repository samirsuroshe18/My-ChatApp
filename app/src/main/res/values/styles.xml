<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="Widget.MyChatApp.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/whatsapp_primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.MyChatApp.Button.Borderless" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/whatsapp_primary</item>
        <item name="rippleColor">@color/whatsapp_ripple</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.MyChatApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/whatsapp_primary</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">8dp</item>
    </style>

    <!-- EditText Style -->
    <style name="Widget.MyChatApp.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/whatsapp_text_primary</item>
        <item name="android:textColorHint">@color/whatsapp_text_hint</item>
        <item name="boxStrokeColor">@color/whatsapp_primary</item>
        <item name="boxBackgroundColor">@color/whatsapp_input_background</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="NoPaddingEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:padding">0dp</item>
    </style>


    <!-- Toolbar Style -->
    <style name="Widget.MyChatApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/whatsapp_primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@color/whatsapp_toolbar_subtitle</item>
        <item name="android:elevation">4dp</item>
    </style>

